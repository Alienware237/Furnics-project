<div class="swiper-slide overflow-hidden">
    <div class="product-card">
        <div class="card-detail d-flex justify-content-between align-items-baseline pt-3">
            <h3 class="card-title text-uppercase">
                <a href="{{ path('app_index') }}">{{ article.articleName }}</a>
            </h3>
        </div>
        <div class="image-overlay position-relative">
            <div class="product-image">
                {% set img = article.articleImages | json_decode | first %}
                <img src="{{ asset(img) }}" alt="product-item" class="product-image img-fluid">
                <div class="text-box box-slide position-absolute">
                    <div class="text-content p-5 bg-light">
                        <h3>About the article</h3>
                        <p>Assumenda temporibus quidem ipsam. fuga corporis iusto similique voluptates sint quibusdam.</p>
                        <ul>
                            {% set foo = article.description | json_decode %}
                            {% if foo.description is defined %}
                                <li>{{ foo.description }}</li>
                            {% endif %}
                            {% if foo.sizeAndQuantity is defined %}
                                {% for size, number in foo.sizeAndQuantity %}
                                <li>Size: {{ size }}   Quantity: {{ number }}</li>
                                {% endfor %}
                            {% endif %}
                            <li>Different Size of Bed</li>
                            <li>Comfortable and Clean Room</li>
                        </ul>
                        <div class="cart-info">
                            <form action="{{ path('cart_add') }}" method="post">
                                <input type="hidden" name="article_id" value="{{ article.getArticleId() }}">
                                <button type="submit" class="pseudo-text-effect" data-after="ADD TO CART" methods="post" action="{{ path('cart_add') }}"><span>$200</span></button>
                            </form>
                        </div>
                        <a href="#" class="btn btn-normal mt-3">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>