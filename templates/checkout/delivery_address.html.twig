{% extends 'base.html.twig' %}

{% block body %}
    {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="{{ asset('js/user-cart.js') }}"></script>
    {% endblock %}

    <link rel="stylesheet" type="text/css" href="{{ asset('css/delivery_address_form.scss') }}">


    <div class="site-wrap" data-remove-url="{{ path('remove_article') }}">
        <header class="site-navbar" role="banner">
            <div class="site-navbar-top">
                <div class="container">
                    <div class="row align-items-center">

                        <div class="col-6 col-md-4 order-2 order-md-1 site-search-icon text-left">
                            <form action="" class="site-block-top-search">
                                <span class="icon icon-search2"></span>
                                <input type="text" class="form-control border-0" placeholder="Search">
                            </form>
                        </div>

                        <div class="col-12 mb-3 mb-md-0 col-md-4 order-1 order-md-2 text-center">
                            <div class="site-logo">
                                <a class="navbar-brand" href="{{ path('app_index') }}">
                                    <img src="{{ asset('images/main-logo.png') }}" class="logo">
                                </a>
                            </div>
                        </div>

                        <div class="col-6 col-md-4 order-3 order-md-3 text-right">
                            <div class="site-top-icons">
                                <ul>
                                    <li><a href="#"><svg class="user" width="18" height="18" data-toggle="modal" data-target="#exampleModal">
                                                <use xlink:href="#user"></use>
                                            </svg>
                                        </a>
                                        {{ user.email }}
                                    </li>
                                    <!--<li><a href="#"><span class="icon icon-heart-o"></span></a></li>-->
                                    <li>
                                        <a href="{{ path('app_cart') }}" class="site-cart">
                                            <svg class="cart" width="18" height="18">
                                                <use xlink:href="#cart"></use>
                                            </svg>
                                            {% set count = 0 %}
                                            {% for item in allCartItems %}
                                                {% set count = count + item.quantity %}
                                            {% endfor %}
                                            <span class="count" data-article-number="{{ count }}">{{ count }}</span>
                                        </a>
                                    </li>
                                    <li class="d-inline-block d-md-none ml-md-0"><a href="#" class="site-menu-toggle js-menu-toggle"><span class="icon-menu"></span></a></li>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <nav class="site-navigation text-right text-md-center" role="navigation">
                <div class="container">
                    <ul class="site-menu js-clone-nav d-none d-md-block">
                        <li class="has-children" >
                            <a href="{{ path('app_index') }}" class="dropdown-toggle">Home</a>
                            <ul class="dropdown">
                                <li><a href="#">Menu One</a></li>
                                <li><a href="#">Menu Two</a></li>
                                <li><a href="#">Menu Three</a></li>
                                <li class="has-children">
                                    <a href="#" class="dropdown-toggle">Sub Menu</a>
                                    <ul class="dropdown">
                                        <li><a href="#">Menu One</a></li>
                                        <li><a href="#">Menu Two</a></li>
                                        <li><a href="#">Menu Three</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                        <li class="has-children">
                            <a href="{{ path('app_index') }}" class="dropdown-toggle">About</a>
                            <ul class="dropdown">
                                <li><a href="#">Menu One</a></li>
                                <li><a href="#">Menu Two</a></li>
                                <li><a href="#">Menu Three</a></li>
                            </ul>
                        </li>
                        <li><a href="{{ path('app_index') }}">Shop</a></li>
                        <li><a href="#">Catalogue</a></li>
                        <li><a href="#">New Arrivals</a></li>
                        <li><a href="{{ path('app_index') }}">Contact</a></li>
                    </ul>
                </div>
            </nav>
        </header>

        <div class="bg-light py-3">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 mb-0"><a href="{{ path('app_index') }}">Home</a> <span class="mx-2 mb-0">/</span> <a href="{{ path('app_cart') }}">Cart</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Delivery Adress</strong></div>
                </div>
            </div>
        </div>

        <div class="site-section">
            <div class="container">
                <div class="row mb-5">
                    <div class="col-md-12">
                        <div class="border p-4 rounded" role="alert">
                            Returning customer? <a href="{{ path('app_login') }}">Click here</a> to login
                        </div>
                    </div>
                </div>
                <div class="contain">
                    {{ form_start(form, { 'attr': {'id': 'delivery_address_form'} }) }}
                    <h2>Delivery Address</h2>
                    {% if form.vars.errors|length > 0 %}
                        <div class="alert alert-danger">
                            <ul>
                                {% for error in form.vars.errors %}
                                    <li>{{ error.message }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}
                    <div>{{ form_row(form.name) }}</div>
                    <div>{{ form_row(form.phone) }}</div>
                    <div>{{ form_row(form.email) }}</div>
                    <div>{{ form_row(form.country) }}</div>
                    <div>{{ form_row(form.city) }}</div>
                    <div>{{ form_row(form.street) }}</div>
                    <div>{{ form_row(form.houseNumber) }}</div>
                    <button class="bg-primary" type="submit">Submit</button>
                    {{ form_end(form) }}
                </div>

                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                <!-- </form> -->
            </div>
        </div>

        {% include 'footer/footer.html.twig' %}
    </div>
{% endblock %}
